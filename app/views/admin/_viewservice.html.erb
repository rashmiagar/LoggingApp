
<div id="bottompane">
	<span class = "help-inline"><%= flash[:notice] %> </span>
	<h2> View Service </h2>
	<table class="table">
		<thead>
			<tr>
				<th>id</th>
				<th>service name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% servicetypes.each do |serv| %>
				<tr>
					<td><%= serv.id %></td>
					<td><%= serv.service_name %></td>
					<td><%= link_to "Remove Service", service_path(serv), :confirm => 'Are you sure you want to delete this service?',:method => :delete %></td>
				</tr>
			<% end %>
		</tbody>

	</table>